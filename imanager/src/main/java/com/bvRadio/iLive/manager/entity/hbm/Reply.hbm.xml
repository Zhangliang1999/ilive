<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.bvRadio.iLive.manager.entity">
	<class name="Reply" table="reply">
		<meta attribute="sync-DAO">false</meta>
		<id name="id" type="java.lang.Long">
			<column name="id" />
			<generator class="assigned" />
		</id>

		<property name="reportId">
			<column name="report_id" />
		</property>

		<property name="type">
			<column name="type" />
		</property>

		<property name="replayContent">
			<column name="replay_content" />
		</property>

		<property name="userId">
			<column name="user_id" />
		</property>
		
		<property name="userName">
			<column name="user_name" />
		</property>
		
		<property name="userNailName">
			<column name="user_nail_name" />
		</property>
		
		<property name="replyType">
			<column name="reply_type" />
		</property>
		
		<property name="createTime">
			<column name="create_time" />
		</property>

	</class>
</hibernate-mapping>
