<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.bvRadio.iLive.iLive.entity">
	<class name="ILiveComments" table="ilive_comments">
		<meta attribute="sync-DAO">false</meta>
		<id name="commentsId" type="java.lang.Long">
			<column name="comments_id" />
			<generator class="assigned" />
		</id>
		
		<property name="comments" type="java.lang.String">
			<column name="comments"/>
		</property>
		
		<property name="commentsName" type="java.lang.String">
			<column name="comments_name"/>
		</property>
		<property name="userId" type="java.lang.Long">
			<column name="user_id"/>
		</property>
		<property name="msgId" type="java.lang.Long">
			<column name="msg_id"/>
		</property>
		
		<property name="isDelete" type="java.lang.Boolean">
			<column name="is_delete"/>
		</property>
		
		<property name="isChecked" type="java.lang.Boolean">
			<column name="is_checked"/>
		</property>
		
		<property name="createTime" type="java.sql.Timestamp">
			<column name="create_time"/>
		</property>
		
	</class>
</hibernate-mapping>
